<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_primary"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/tv_mycomics_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyComics"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/yellow_primary"
        android:fontFamily="@font/monsterrat_medium"
        app:layout_constraintBottom_toTopOf="@+id/iv_logo_comics_splash"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_comics_splash"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_comics_splash" />

    <ImageView
        android:id="@+id/iv_logo_comics_splash"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_comics_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.450" />

    <TextView
        android:id="@+id/tv_slogan_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="RecyclerView Assignment"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/yellow_primary"
        android:fontFamily="@font/monsterrat_light"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_comics_splash"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_comics_splash"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_comics_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>